generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String        @id @default(ulid())
  name       String        @map("name_user")
  email      String        @unique @map("email_user")
  password   String        @map("password_user")
  createdAt  DateTime      @default(now()) @map("created_at")

  projects            Project[]
  subscriptions       Subscription[]
  submissions         Submission[]
  cliSessions         CliSession[]
  githubInstallations GitHubInstallation[]

  @@map("user")
}

model CliSession {
  id        String   @id @default(ulid())
  sessionId String   @unique @map("session_id")
  token     String?  @map("token")
  userId    String?  @map("user_id")
  status    String   @default("pending") // pending | completed | expired
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("cli_session")
}

model Project {
  id          String       @id @default(ulid())
  name        String       @map("name_project")
  description String?
  userId      String       @map("id_user")
  repositoryUrl String? @map("repository_url")
  repositoryPath String? @map("repository_path")
  language      String? @map("language_project")
  customInstructions String? @map("custom_instructions")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime?    @map("updated_at")
  
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  submissions Submission[]
  
  @@map("project")
}

model StatusPlan {
  id   String @id @default(ulid())
  name String @map("name_status_plan")
  
  plans Plan[]
  
  @@map("status_plan")
}

model Plan {
  id                String        @id @default(ulid())
  name              String        @map("name_plan")
  price             Decimal       @map("price_plan") @db.Decimal(10, 2)
  requestPerDay     Int           @map("request_per_day")
  allowPrivateRepo  Boolean       @default(false) @map("allow_private_repo")
  privacyMode       Boolean       @default(false) @map("privacy_mode")
  statusPlanId      String        @map("id_status_plan")
  
  statusPlan    StatusPlan    @relation(fields: [statusPlanId], references: [id])
  subscriptions Subscription[]
  
  @@map("plan")
}

model Subscription {
  id        String   @id @default(ulid())
  startDate DateTime @map("start_date")
  endDate   DateTime? @map("end_date")
  status    String
  price     Decimal  @db.Decimal(10, 2)
  userId    String   @map("id_user")
  planId    String   @map("id_plan")
  createdAt DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])
  
  @@map("subscription")
}

enum SubmissionModeEnum {
  PR_DIFF
  UNCOMMITTED
  COMMIT
  CUSTOM
}

enum StatusSubmissionEnum {
  PENDING
  COMPLETED
  FAILED
}

model StatusSubmission {
  id   String @id @default(ulid())
  name StatusSubmissionEnum @map("name_status_submission")
  
  submissions Submission[]
  
  @@map("status_submission")
}

model Submission {
  id                String            @id @default(ulid())
  codeContent       String            @map("code_content") @db.Text
  submissionMode    SubmissionModeEnum @map("submission_mode")
  createdAt         DateTime          @default(now()) @map("created_at")
  userId            String            @map("user_id")
  projectId         String            @map("project_id")
  statusSubmissionId String           @map("id_status_submission")
  metadata          Json?             @map("metadata")

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  project           Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  statusSubmission  StatusSubmission  @relation(fields: [statusSubmissionId], references: [id])
  reviews           Review[]
  githubPullRequest GitHubPullRequest?

  @@map("submission")
}

model Review {
  id              String   @id @default(ulid())
  summary         String?  @db.Text
  detectedIssues  String?  @map("detected_issues") @db.Text
  suggestedChanges String? @map("suggested_changes") @db.Text
  createdAt       DateTime @default(now()) @map("created_at")
  submissionId    String   @map("id_submission")

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@map("review")
}

model GitHubInstallation {
  id             String   @id @default(ulid())
  installationId String   @unique @map("installation_id")
  accountLogin   String   @map("account_login")
  accountType    String   @map("account_type")
  userId         String?  @map("user_id")
  createdAt      DateTime @default(now()) @map("created_at")

  user         User?               @relation(fields: [userId], references: [id], onDelete: SetNull)
  pullRequests GitHubPullRequest[]

  @@map("github_installations")
}

model GitHubPullRequest {
  id             String   @id @default(ulid())
  prNumber       Int      @map("pr_number")
  installationId String   @map("installation_id")
  owner          String
  repo           String
  headRef        String   @map("head_ref")
  baseRef        String   @map("base_ref")
  commitSha      String   @map("commit_sha")
  submissionId   String?  @unique @map("submission_id")
  checkRunId     String?  @map("check_run_id")
  status         String   @default("pending")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  installation GitHubInstallation @relation(fields: [installationId], references: [installationId])
  submission   Submission?        @relation(fields: [submissionId], references: [id])

  @@unique([owner, repo, prNumber])
  @@map("github_pull_requests")
}